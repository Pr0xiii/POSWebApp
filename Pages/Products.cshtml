@page "/products"
@model PointOfSalesWebApplication.Pages.ProductsModel

<div class="page-nav">
    <a asp-page="/ProductView" class="btn btn-primary">Create New Product</a>
    <form>
        <span class="bi bi-search"></span>
        <input type="text" placeholder="Search by Name" />
    </form>
    <form>
        <label>Filter by:</label>
        <select>
            <option>Can be sold</option>
        </select>
        <label>Group by:</label>
        <select>
            <option>Can be sold</option>
        </select>
    </form>
</div>
<table class="table table-striped table-hover" style="width:100%">
    <tr>
        <th>Product Name</th>
        <th>Cost Price</th>
        <th>Sale Price</th>
        <th>Can be sold</th>
        <th>Edit Product</th>
        <th>Delete Product</th>
    </tr>
    @foreach (var product in Model.Products)
    {
        <tr class="item">
            <td>@product.Name</td>
            <td>@product.CostPrice</td>
            <td>@product.SalePrice</td>
            <td>@product.CanBeSold</td>
            <td>
                <a asp-page="/ProductView" asp-route-productID="@product.ID" class="btn btn-info">Edit</a>
            </td>
            <td>
                <form method="post" asp-page-handler="Delete" class="d-inline">
                    <input type="hidden" name="productID" value="@product.ID" />
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>

