@page "/products"
@model PointOfSalesWebApplication.Pages.Products.ProductsModel

<div class="page-nav">
    <a asp-page="/Products/ProductView" class="btn btn-primary">Create New Product</a>
    <form method="get">
        <input type="text" name="SearchString" value="@Model.SearchString" placeholder="Search by Name..." />
        <button type="submit" class="btn btn-basic">
            <span class="bi bi-search"></span>Search
        </button>
    </form>
    <form method="get">
        <label>Sort by:</label>
        <select asp-for="SortString" asp-items="Model.SortOptions" class="form-select"
                onchange="this.form.submit()"></select>
        <label>Group by:</label>
        <select asp-for="OrderString" asp-items="Model.OrderOptions" class="form-select"
                onchange="this.form.submit()"></select>
    </form>
</div>
<div class="table-container">
    <table class="table table-striped table-hover">
        <tr>
            <th>Product Name</th>
            <th>Cost Price</th>
            <th>Sale Price</th>
            <th>Can be sold</th>
            <th>Edit Product</th>
            <th>Delete Product</th>
        </tr>
        @foreach (var product in Model.Products)
        {
            <tr class="item">
                <td>@product.Name</td>
                <td>@product.CostPrice</td>
                <td>@product.SalePrice</td>
                <td>
                    @if (product.CanBeSold)
                    {
                        <span class="bi bi-check-square-fill text-success"></span>
                    }
                    else
                    {
                        <span class="bi bi-square text-muted"></span>
                    }
                </td>
                <td>
                    <a asp-page="/Products/ProductView" asp-route-productID="@product.ID" class="btn btn-info">Edit</a>
                </td>
                <td>
                    <form method="post" asp-page-handler="Delete" class="d-inline">
                        <input type="hidden" name="productID" value="@product.ID" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>
@{

}
