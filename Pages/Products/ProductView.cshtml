@page "/products/view/{productID?}"
@model PointOfSalesWebApplication.Pages.Products.ProductViewModel

<form method="post" valid>
    <input type="hidden" asp-for="Product.ID" />
    <div class="header-btns">
        <a class="btn btn-default" asp-page="/Clients/Clients">Back</a>
        <input type="submit" value="Save" class="btn btn-primary"/>
    </div>

    <div class="header-title">
        <label asp-for="Product.Name">Name</label>
        <input type="text" asp-for="Product.Name" />
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>

    <div class="subheader">
        <label asp-for="Product.CanBeSold">Can be sold</label>
        <input asp-for="Product.CanBeSold" type="checkbox" />
    </div>

    <div class="notebook-container">
        <div class="col-sm-6 notebook">
            <div class="notebook-item">
                <label asp-for="Product.CostPrice">Cost Price</label>
                <input asp-for="Product.CostPrice" type="number" />
                <span asp-validation-for="Product.CostPrice" class="text-danger"></span>
            </div>
            <div class="notebook-item">
                <label asp-for="Product.SalePrice">Sale Price</label>
                <input asp-for="Product.SalePrice" type="number" />
                <span asp-validation-for="Product.SalePrice" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>

@{
}
