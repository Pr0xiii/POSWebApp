@page "/products/view/{productID?}"
@model PointOfSalesWebApplication.Pages.ProductViewModel

<form method="post" valid>
    <input type="hidden" asp-for="Product.ID" />

    <label asp-for="Product.Name">Name:</label>
    <input type="text" asp-for="Product.Name" />
    <span asp-validation-for="Product.Name" class="text-danger"></span>

    <label asp-for="Product.CostPrice">Cost Price:</label>
    <input asp-for="Product.CostPrice" type="number" />
    <span asp-validation-for="Product.CostPrice" class="text-danger"></span>

    <label asp-for="Product.SalePrice">Sale Price:</label>
    <input asp-for="Product.SalePrice" type="number" />
    <span asp-validation-for="Product.SalePrice" class="text-danger"></span>

    <label asp-for="Product.IsPublished">Is Published:</label>
    <input asp-for="Product.IsPublished" type="checkbox" />
    <input type="submit" value="Save" />
</form>

@{
}
