@page "pos/sales"
@model PointOfSalesWebApplication.Pages.POS.SalesViewModel
@{
    Layout = "_PosLayout";
}

<div class="page-nav">
    <form method="get">
        <input type="text" name="SearchString" value="@Model.SearchString" placeholder="Search by Name..." />
        <button type="submit" class="btn btn-basic">
            <span class="bi bi-search"></span>Search
        </button>
    </form>
    <form method="get">
        <label>Sort by:</label>
        <select asp-for="SortString" asp-items="Model.SortOptions" class="form-select"
                onchange="this.form.submit()"></select>
    </form>
    <form method="get">
        <label>Group by:</label>
        <select asp-for="GroupString" asp-items="Model.GroupOptions" class="form-select"
                onchange="this.form.submit()"></select>
    </form>
</div>
@foreach (var group in Model.Groups)
{
    <h3>@group.GroupKey</h3>

    <table class="table table-striped table-hover">
        @foreach (var sale in group.Items)
        {
            <tr>
                <td>@sale.Name</td>
                @if(sale.Client != null) 
                {
                    <td>@sale.Client.Name</td>
                    <td>@sale.Client.Email</td>
                }
                else {
                    <td>No client</td>
                    <td>No email</td>
                }
                <td>@sale.SaleDate</td>
                <td>@sale.Status</td>
                <td>@sale.TotalCost</td>
                <td>
                    <form method="post" asp-page-handler="CancelSale" class="d-inline">
                        <input type="hidden" name="saleID" value="@sale.ID" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            <span class="bi bi-trash3-fill"></span>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
}