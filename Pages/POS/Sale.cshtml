@page "/pos/sale"
@model PointOfSalesWebApplication.Pages.POS.SaleModel

<div class="header">
    <h1>@Model.CurrentSale.Name</h1>
<div>
<div>
    <form method="get">
        <input type="hidden" name="saleID" value="@Model.CurrentSale.ID" />
        <label>Sort by:</label>
        <select asp-for="ClientString" asp-items="Model.ClientOptions" class="form-select"
                onchange="this.form.submit()"></select>
    </form>
    @if(@Model.CurrentSale.Client != null) { 
        <p>Facturation address : @Model.CurrentSale.Client.Address</p> 
        <p>Delivery address : @Model.CurrentSale.Client.Address</p>
    }
    else { 
        <p>Facturation address :</p> 
        <p>Delivery address :</p> 
    }
    <p>Date of sale: @Model.CurrentSale.SaleDate</p> 
</div>
<div class="row">
    <div class="col-sm-6">
        <!-- Liste des produits achetÃ©s -->
        <table class="table table-striped table-hover">
            <tr>
                <th>Product</th>
                <th>Unit Price</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
            @foreach(var product in Model.CurrentSale.Lines) 
            {
                <tr>
                    <td>@product.Product.Name</td>
                    <td>@product.UnitPrice</td>
                    <td>@product.Quantity</td>
                    <td>@product.TotalPrice</td>
                </tr>
            }
        </table>
    </div>
    <div class="sale-products-container col-sm-6">
        <!-- Liste de tous les produits du magasin -->
        @foreach(var product in Model.Products) 
        {
            <div class="product-item">
                <form method="post" asp-page-handler="AddProduct">
                    <input type="hidden" name="saleID" value="@Model.CurrentSale.ID" />
                    <input type="hidden" name="productID" value="@product.ID" />
                    <input type="hidden" name="qty" value="1" />
                    <button type="submit" class="btn btn-default">
                        <span class="bi bi-card-image"></span>
                        <p>@product.Name</p>
                        <p>@product.SalePrice</p>
                    </button>
                </form>
            </div>
        }
    </div>
<div>
<div class="footer">
    <form method="post" asp-page-handler="FinalizeSale">
        <input type="hidden" name="saleID" value="@Model.CurrentSale.ID" />
        <input type="hidden" name="clientID" value="@Model.CurrentSale.ClientID" />
        <button type="submit" class="btn btn-success">Payment</button>
    </form>
    <h4>Total : @Model.CurrentSale.TotalCost</h4>
</div>
@{

}